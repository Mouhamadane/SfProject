{% extends 'base.html.twig' %}

{% block title %}{{controller_name}}{% endblock %}

{% block body %}
<div class="col-lg-12">
    <div class="col-sm-6 my-auto">
        <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4">Ajouter un étudiant !</h1>
        </div>
        <span id="val" class="error-form"></span>
        {{form_start(form,{'attr':{'class':'user'}})}}
            <div class="form-group">
                {{ form_row(form.fisrtName,{'attr': {'class':'form-control form-control-user','placeholder':'Prénom'},'label':false})}}
            </div>
            <div class="form-group">
                {{ form_row(form.lastName,{'attr': {'class':'form-control form-control-user','placeholder':'Nom'},'label':false})}}
            </div>
            <div class="form-group">
                {{ form_row(form.email,{'attr': {'class':'form-control form-control-user','placeholder':'Email'},'label':false})}}
            </div>
             <div class="form-group">
                {{ form_row(form.telephone,{'attr': {'class':'form-control form-control-user','placeholder':'Téléphone'},'label':false})}}
            </div>
            <div class="form-group">
                {{ form_row(form.dateNaissance,{'attr': {'class':'form-control form-control-user','placeholder':'Date de naissance'},'label':false})}}
            </div>
            <div class="form-group">
                {{ form_row(form.typeStudent,{'attr': {'class':'form-control'},'label':'Type Etudiant'})}}
            </div>
            <div class="form-group">
                {{ form_row(form.bourse,{'attr': {'class':'form-control'},'label':false})}}
            </div>
            <div class="form-group">
                {{ form_row(form.adresse,{'attr': {'class':'form-control form-control-user','placeholder':'Adresse..', 'id':'adresse'},'label':false})}}
            </div>
            <div class="form-group">
                {{ form_row(form.numRoom,{'attr': {'class':'form-control'},'label':false})}}
            </div>
            <button type="submit" name="envoyer" class="btn btn-primary btn-user btn-block"> Ajouter</button>
        {{form_end(form)}}
       
        <hr><hr>

    </div>
</div>
{% endblock %}
{% block javascripts %}
<script src="/js/generation.js"> </script>
{% endblock %}
